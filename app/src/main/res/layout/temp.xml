<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Stormy.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:theme="@style/Theme.Stormy.AppWidgetContainer">


    <ImageView
        android:id="@+id/image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingLeft="2dp"
        android:src="@drawable/rain" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image"
        android:paddingLeft="15dp"
        android:text="25"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/degree"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/temp"
        android:layout_toRightOf="@+id/temp"
        android:paddingTop="15dp"
        android:src="@drawable/degree" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/degree"
        android:paddingLeft="10dp"
        android:text="Rawalpindi, PK"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/city"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:src="@drawable/refresh" />
</RelativeLayout>